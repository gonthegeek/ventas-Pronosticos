rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Enhanced security rules for vending machine sales tracking
    // Only authenticated users can access their own sales data
    
    match /artifacts/{appId}/public/data/sales/{saleId} {
      allow read, write: if request.auth != null 
        && request.auth.uid != null
        && resource.data.userId == request.auth.uid;
      
      allow create: if request.auth != null 
        && request.auth.uid != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.timestamp is timestamp
        && request.resource.data.machineId is string
        && request.resource.data.saleAmount is number
        && request.resource.data.saleAmount > 0;
    }
    
    // User profile data (if needed)
    match /users/{userId} {
      allow read, write: if request.auth != null 
        && request.auth.uid == userId;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}